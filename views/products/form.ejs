<h1><%= product._id ? 'Sửa' : 'Thêm' %> sản phẩm</h1>
<form method="post" action="<%= product._id ? '/products/'+product._id+'?_method=PUT' : '/products/create' %>" class="form">
  <label>Tên <input type="text" name="name" value="<%= product.name||'' %>" required></label>
  <label>Giá <input type="number" step="0.01" name="price" value="<%= product.price||'' %>" required></label>
  <label>Số lượng <input type="number" name="quantity" value="<%= product.quantity||'' %>" required></label>
  <label>Nhà cung cấp
    <select name="supplier" required>
      <% suppliers.forEach(s=>{ %>
        <option value="<%= s._id %>" <%= product.supplier && (product.supplier.toString()==s._id.toString()) ? 'selected' : '' %>><%= s.name %></option>
      <% }) %>
    </select>
  </label>
  <button>Lưu</button>
</form>
